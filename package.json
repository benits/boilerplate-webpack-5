{
  "name": "webpack-boilerplate",
  "version": "1.0.0",
  "description": "Customizable Boilerplate using Webpack 5, Babel, PostCSS and Sass with an active development server and an optimized production build.",
  "main": "./dist/index.html",
  "author": "Matheus Benites",
  "license": "MIT",
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack serve --config config/webpack.dev.js",
    "start:dashboard": "cross-env NODE_ENV=development webpack-dashboard -c magenta -- webpack serve --config config/webpack.dev.js",
    "build": "cross-env NODE_ENV=production webpack --config config/webpack.prod.js",
    "build:staging": "cross-env NODE_ENV=staging webpack --config config/webpack.prod.js",
    "build:beta": "cross-env NODE_ENV=beta webpack --config config/webpack.prod.js",
    "lint:eslint": "eslint . --ext .js,.jsx",
    "lint:stylelint": "stylelint ./src/**.css",
    "test:coverage": "jest --watchAll --coverage",
    "test:watch": "jest --watchAll",
    "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --watch",
    "lint": "jest --config test/jest.lint.js",
    "validate": "jest --coverage"
  },
  "jest-runner-eslint": {
    "cliOptions": {
      "ignorePath": "./.gitignore"
    }
  },
  "jest": {
    "verbose": true
  },
  "keywords": [
    "webpack",
    "webpack 5",
    "webpack boilerplate"
  ],
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.12.3",
    "@babel/eslint-plugin": "^7.12.1",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-transform-react-jsx": "^7.12.1",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.1",
    "@emotion/babel-plugin": "^11.0.0",
    "@emotion/jest": "^11.1.0",
    "babel-loader": "^8.2.0",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^6.2.1",
    "cross-env": "^7.0.2",
    "css-loader": "^5.0.0",
    "css-minimizer-webpack-plugin": "^1.1.5",
    "eslint": "7.2.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-import-resolver-webpack": "^0.13.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "4.0.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.0.0-alpha.14",
    "jest": "^26.6.3",
    "jest-runner-eslint": "^0.10.0",
    "mini-css-extract-plugin": "^1.0.0",
    "mini-svg-data-uri": "^1.2.3",
    "node-sass": "^4.14.1",
    "optimize-css-assets-webpack-plugin": "^5.0.4",
    "path": "^0.12.7",
    "postcss-loader": "^4.0.4",
    "postcss-preset-env": "^6.7.0",
    "prettier": "2.1.2",
    "sass-loader": "^10.0.3",
    "style-loader": "^2.0.0",
    "stylelint": "^13.7.2",
    "stylelint-config-standard": "^20.0.0",
    "terser-webpack-plugin": "^5.0.0",
    "url-loader": "^4.1.1",
    "webpack": "^5.1.3",
    "webpack-bundle-analyzer": "^4.1.0",
    "webpack-cli": "^4.0.0",
    "webpack-dashboard": "^3.2.1",
    "webpack-dev-server": "^3.11.0",
    "webpack-manifest-plugin": "^3.0.0",
    "webpack-merge": "^5.2.0",
    "webpack-nano": "^1.1.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/benits/boilerplate-webpack-5.git"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "autoprefixer": "^10.0.2",
    "axios": "^0.21.0",
    "dotenv": "^8.2.0",
    "eslint-plugin-jest": "^24.1.3",
    "history": "^5.0.0",
    "jest-config": "^26.6.3",
    "moment": "^2.29.1",
    "prop-types": "^15.7.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-hook-form": "^6.12.2",
    "react-router-dom": "^5.2.0",
    "styled-components": "^5.2.1"
  },
  "eslintIgnore": [
    "*.test.js"
  ]
}